<Application
    x:Class="KudaGo.Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:KudaGo.Client.Converters"
    xmlns:local="using:KudaGo.Client"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views\NodeTemplate.xaml" />
                <ResourceDictionary Source="Views\Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFEEEEEE" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundSecondThemeBrush" Color="#FFFFFFFF" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FF000000" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundSecondThemeBrush" Color="#FF303030" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Thickness x:Key="DefultTextBlockMargin">0,8,0,0</Thickness>


            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>


        </ResourceDictionary>
    </Application.Resources>

</Application>
